/* init */
html,body,dl,dt,dd,ul,li,h3,h4,pre,input,p,blockquote,th,td,form,iframe,ol {margin:0;padding:0;}
html {width:100%;height:100%;}
body {}
ul {list-style:none;}
img {border:0;}
q:before,q:after {content:'';}
iframe {filter:chroma(color=#ffffff);}
table {border-collapse:collapse;border-spacing:0;width:100%;}
.clear {zoom:1;}
.clear:after {clear:both;content:"";display:block}
button,input[type="button"],input[type="reset"],input[type="submit"] {cursor:pointer;-webkit-appearance:button;*overflow:visible;}

input {outline:none;}
input,code {font-family:"Microsoft YaHei", "宋体", Arial, Helvetica, sans-serif;}
ul, dl, dl dt, dl dd, form {padding:0;margin:0;list-style:none;}
h1, h2, h3, h4, h5 {padding:0;margin:0;}

input,textarea {margin:0;font-family:"Microsoft YaHei", "宋体", Arial, Helvetica, sans-serif;font-size:12px;}
a {color:#333;text-decoration:none;border:none;outline:none;}
a:hover {color:#333;text-decoration:none;}
a:focus {outline:none;}

.hide{display:none;}

/* Base */
body {background:#FFF;color:#333;font-size:12px;font-family:"微软雅黑","宋体", Arial, Helvetica, sans-serif;position:relative;overflow-y:hidden;}
.tran {transition:all .3s ease;-webkit-transition:all .3s ease;-moz-transition:all .3s ease;-o-transition:all .3s ease;}
.left {float:left;}
.right {float:right;}
.overflow {overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}

/* Layout */
.map {border-top:#858585 solid 1px;}
.left-side {width:460px;border-right:#858585 solid 1px;}
.right-side {background:#F6F6F6;position:relative;}
.left-side .left-nav {background:#000;border-right:#000 solid 1px;width:55px;}
.left-nav li a {background:url(../images/ico.png) no-repeat center 0;width:55px;height:20px;display:block;text-align:center;color:#FFF;margin-bottom:2px;font-size:12px;padding-top:35px;}
.left-nav .active a {background-color:#3C96E6;}
.left-nav a:hover {background-color:#3C96E6;}
.left-nav .selected a {background-color:#3C96E6;}
.left-side .left-content {background:#FFF;width:403px;overflow:auto;overflow-x:hidden;}
.left-content h2 {background:url(../images/ico-h2.png) no-repeat 12px center;border-bottom:#E4E4E4 solid 1px;width:349px;padding:22px 12px 22px 42px;font-size:18px;color:#333;font-weight:bold;}
.left-content li {border-bottom:#E4E4E4 solid 1px;width:379px;padding:22px 12px;}
.left-content li h3 {font-size:14px;}
.left-content li p {color:#999;margin:6px 0 12px 0;}
.left-content .btn a {background:#45AC71;height:24px;line-height:24px;padding:0 12px;margin-right:6px;color:#FFF;display:block;}
.left-content .btn a:hover {background:#6ABD8D;}
.left-content .btn a:active {background:#3E9A65;}

.small-btn {border:#858585 solid 1px;border-left-color:#FFF;width:12px;height:52px;display:block;position:absolute;top:50%;left:-2px;margin-top:-25px;}
.hide-btn {background:url(../images/ico-hide-btn.png) no-repeat;}
.hide-btn:hover {background-position:0 -52px;}
.show-btn {background:url(../images/ico-hide-btn.png) no-repeat 0 -104px;display:none;}
.show-btn:hover {background-position:0 -156px;}

.hide {display:none;}
.auto-width {width:auto;}



